body
	background-color: white
	font-family: sans-serif

h3
	margin: 0
	padding: 0

section
	margin-bottom: 1em
	&:after
		content: ' '
		display: block
		clear: both
	.experiment
		display: none
	table.results
		border-color: white
		td, th
			text-align: center
		> tbody td, > thead th
			padding: 0.2em
			width: 45px
			height: 25px
		.summary
			> tr > td
				text-align: left
				padding: 6px 10px
			table
				float: left
				td
					min-width: 30px
			button
				float: right

code
	display: inline-block

.tip 
	margin: 1em 0
	border: solid 1px rgb(201, 201, 201)
	padding: 1em 1em 0 1em
	box-shadow: rgb(133, 133, 133) 1px 1px

svg 
	display: block
		text
		font: normal 12px Arial
	.axis
		path
			fill: none
			stroke: #000
			shape-rendering: crispEdges
		line
			stroke: silver
			stoke-width: 0.3


line
	stroke: #000000
	fill: none


